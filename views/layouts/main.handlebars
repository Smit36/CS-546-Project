<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>{{ title }} | Corporate Traveling Expense Management</title>
  <link rel="stylesheet" href="/css/main.css">
</head>

<body>

  <header>
    <h1>
      Corporate Traveling Expense Management
    </h1>
    <div class="row">
      <div class="col-25">
        <h2>
          {{title}}
        </h2>
      </div>
      <div class="col-25">
        {{#if user}}
        {{#if corporate}}
        <h2>
          Corporate:
          {{corporate.name}}
        </h2>
        {{/if}}
      </div>
      {{#if user}}
      <div class="col-25">
        <h2>User:
          {{user.name}}</h2>
        <span id="user-id" hidden>{{user._id}}</span>
      </div>
      <div class="col-25">
        <a href="/user/logout"><button>Logout</button>

        </a>
      </div>
      {{/if}}
      {{/if}}
      <aside>
        {{#if isEmployee}}
        <div id="trip-notifications"></div>
        {{/if}}
      </aside>
    </div>
    {{#if user}}
    <nav>
      <ul>
        {{#if isCorporateAdmin}}
        <li>
          <a href="/user">
            Employees
          </a>
        </li>
        <li>
          <a href="/rank">
            Ranks
          </a>
        </li>
        <li>
          <a href="/user/bulk-upload">
            Employees Upload
          </a>
        </li>
        {{else if isPortalAdmin}}
        <li>
          <a href="/corporates">
            Corporates
          </a>
        </li>
        {{else if isEmployee}}
        <li>
          <a href="/expense">
            Expenses
          </a>
        </li>
        <li>
          <a href="/trip">
            Trips
          </a>
        </li>
        {{/if}}
      </ul>
    </nav>
    {{/if}}
  </header>

  <main>
    {{{body}}}
  </main>
