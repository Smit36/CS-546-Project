<div class="row">
  <div class="col-25">
    <div id="new-user">
      <button onClick="addNewUser()">New Employee</button>
    </div>
    <div id="show-user" hidden>
      <button onClick="showUsers()">Show Employee</button>
    </div>
  </div>
</div>

<div id="show-form" hidden>
  <form id="user-form">

    <div class="row">
      <div class="col-25">
        <label for="user-name">Employee Name</label>
      </div>
      <div class="col-75">
        <input type="text" id="name" name="name" placeholder="Name">
      </div>
      <span id="name-error" hidden>Enter name</span>
    </div>

    <div class="row">
      <div class="col-25">
        <label for="email">Email</label>
      </div>
      <div class="col-75">
        <input type="email" id="email" name="email" placeholder="Corporate Email ID">
      </div>
      <span id="email-error" hidden>Enter corporate email ID.</span>
    </div>

    <div class="row">
      <div class="col-25">
        <label for="contact">Contact Number</label>
      </div>
      <div class="col-75">
        <input type="tel" id="contact" name="contact" placeholder="Contact Number">
      </div>
      <span id="contact-error" hidden>Enter contact Number.</span>
    </div>

    <div class="row">
      <div class="col-25">
        <label for="role">Role</label>
      </div>
      <div class="col-25">
        <div class="row">
          <input type="radio" id="admin" name="role" value="ADMIN">
          <label for="admin">Portal Admin</label><br>
          <input type="radio" id="corporate" name="role" value="CORPORATE">
          <label for="corporate">Corporate Admin</label>
          <input type="radio" id="employee" name="role" value="EMPLOYEE">
          <label for="employee">Employee</label>
        </div>
        <span id="role-error" hidden>Select role.</span>
      </div>
    </div>

    <div class="row">
      <div class="col-25">
        <label for="rank">Rank</label>
      </div>
      <div class="col-20">
        <div class="row">
          <select id="rank" name="rank">
            <option default>Select Rank</option>
          </select>
        </div>
        <span id="rank-error" hidden>Select rank.</span>
      </div>
      
    <span id="success-user" hidden>Successfully user added!</span>
    <button type="button" class="submit" id="submit-user">Submit</button>
    <script src="/js/user.js"></script>
  </form>
</div>

<div id='get-users' hidden>
  <div class="row" id="header">
    <div class="col-25">Name</div>
    <div class="col-25">Email</div>
    <div class="col-25">Contact</div>
    <div class="col-25">Role</div>
  </div>
  <div id="user-list">
  </div>
  <div id="modal">
  </div>
</div>