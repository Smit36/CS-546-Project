<div class="row">
  <div id="new-user">
    <button onClick="addNewUser()">New Employee</button>
  </div>
  <div id="show-user">
    <button onClick="showUsers()">Show Employee</button>
  </div>
</div>

<div id="show-form">
  <form id="user-form">
    <div class="row">
      <div class="col-25">
        <label for="name">Employee Name</label>
      </div>
      <div class="col-75">
        <input type="text" id="name" name="name" placeholder="Name">
      </div>
      <span id="new-user-error" hidden>Name must be enter properly</span>
    </div>

    <div class="row">
      <div class="col-25">
        <label for="email">Email</label>
      </div>
      <div class="col-75">
        <input type="email" id="email" name="email" placeholder="Corporate Email ID">
      </div>
      <span id="new-user-email-error" hidden>Provide valid Email Id</span>
    </div>

    <div class="row">
      <div class="col-25">
        <label for="password">Password</label>
      </div>
      <div class="col-75">
        <input type="password" id="password" name="password" placeholder="Password">
      </div>
      <span id="new-user-password-error" hidden>Password should consist of Capital letter, small letter, digit and
        be atleast 8 characters</span>
    </div>

    <div class="row">
      <div class="col-25">
        <label for="contact">Contact Number</label>
      </div>
      <div class="col-75">
        <input type="tel" id="contact" name="contact" placeholder="Contact Number">
      </div>
      <span id="new-user-contact-error" hidden>Contact should be in XXX-XXX-XXXX format</span>
    </div>

    <div class="row">
      <div class="col-25">
        <label>Role</label>
      </div>
      <div class="col-25">
        <div class="row">
          {{#if isPortalAdmin}}          
            <input type="radio" id="admin" name="role" value="ADMIN">
            <label for="admin">Portal Admin</label><br>
          {{/if}}  
          <input type="radio" id="corporate" name="role" value="CORPORATE">
          <label for="corporate">Corporate Admin</label><br>
          <input type="radio" id="employee" name="role" value="EMPLOYEE">
          <label for="employee">Employee</label>
        </div>
        <span id="role-error" style="color: red;" hidden><small>Select role</small></span>
      </div>
    </div>

    <div class="row">
      <div class="col-25">
        <label for="rank">Rank</label>
      </div>
      <div class="col-20">
        <div class="row">
          <select id="rank" name="rank">
          </select>
        </div>
        <span id="rank-error" style="color: red;" hidden><small>Select rank.</small></span>
      </div>
    </div>

    <span id="success-user" hidden>Successfully user added!</span>
    <input type="submit" id="submit-user">
    <script src="/js/user.js"></script>
  </form>
</div>

<div id='get-users' hidden>
  <div class="row" id="header">
    <div class="col-25">Name</div>
    <div class="col-25">Email</div>
    <div class="col-25">Contact</div>
    <div class="col-25">Role</div>
  </div>
  <div id="user-list" hidden>
  </div>
  <div id="modal">
  </div>
</div>