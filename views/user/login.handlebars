<div>
  <form id="login-form" method="POST" action="/user/login">
    <div class="row">
      <div class="col-25">
        <label for="login-form-email">
          User Email
        </label>
      </div>
      <div class="col-75">
        <input id="login-form-email" name="email" type="email" placeholder="abc@apple.com"/>
      </div>
      <div id="login-form-email-error" hidden></div>
    </div>
    <div class="row">
      <div class="col-25">
        <label for="login-form-password">
          Password
        </label>
      </div>
      <div class="col-75">
        <input id="login-form-password" name="password" type="password" />
      </div>
      <div id="login-form-password-error" hidden></div>
    </div>
    <input class="submit" id="login-form-submit" type="submit" value="Login" />
    <div id="login-errors">
      <ul>
        {{#each errors}}
          <li>{{this}}</li>
        {{/each}}
      </ul>
    </div>
  </form>
</div>
<script defer src="/js/login.js"></script>