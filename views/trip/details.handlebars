<div id="trip-detail-card">
  <div class="container">
    <div class="row">
      <div class="col-75">
        <h2>
          {{trip.name}}
        </h2>
      </div>
      <div class="col-25">
        <div>
          <a href="/approval/{{trip.approvalId}}">
            <button id={{approvalInfo.status}}>
              {{approvalInfo.status}}
            </button>
          </a>
        </div>
      </div>
    </div>
    <span hidden id="trip-id">
      {{trip._id}}
    </span>
    <div class="row">
      <div class="col-25">
        <h3>
          Corporate: {{corporate.name}}
        </h3>
      </div>
      <div class="col-25">
        <h3>
          Manager:
          {{manager.name}}
        </h3>
      </div>
    </div>
    <p>
      Employees:
    </p>
    <ul>
      {{#each employees}}
      <li>
        {{name}}
      </li>
      {{/each}}
    </ul>
    <div class="row">
      <div class="col-25">
        <p>
          Start time:
          {{startTime}}
        </p>
      </div>
      <div class="col-25">
        <p>
          End time:
          {{endTime}}
        </p>
      </div>
    </div>

    {{#if expenses}}
    <h4>
      Trip expense items:
    </h4>
    <ol>
      {{#each expenses}}
      <div class="row">
        <li class="trip-li">
          {{user.name}}
          :
          {{name}}
          {{#if isMine}}
          <button class="update trip-green" id="trip-edit-{{_id}}">
            Edit
          </button>
          <button class="delete" id="trip-delete-{{_id}}">
            Delete
          </button>
          {{/if}}
        </li>
      </div>

      {{/each}}
    </ol>
    {{else}}
    <h4>
      Warning: Trip currently doesn't not have any expenses.
    </h4>
    {{/if}}

    <h4>
      Total Trip Expense:
      {{total}}
    </h4>

    <a id="trip-add-expense" href="/trip/{{trip._id}}/expense/new">
      <button>Add New Expense to Trip</button>
    </a>

    <a href="/trip">
      <button>
        Back to Trips
      </button>
    </a>

    <a href="/approval/{{trip.approvalId}}">
      <button>
        To Approval Thread
      </button>
    </a>

  </div>
</div>
<script defer src="/js/trip-details.js"></script>